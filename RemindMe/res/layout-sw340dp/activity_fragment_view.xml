<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/txt_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/activity_header"
        android:textColor="@color/black"
        android:textSize="@dimen/title_font_size" />

    <TextView
        android:id="@+id/txt_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_activity"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/activity_title"
        android:textColor="@color/black"
        android:textSize="@dimen/large_font_size" />

    <ListView
        android:id="@+id/activity_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_done"
        android:layout_below="@+id/txt_activity_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@color/transparent" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bg_color"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="@dimen/large_font_size" />

</RelativeLayout>