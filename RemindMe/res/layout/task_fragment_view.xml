<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/txt_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/task_header"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_title_font_size" />

    <TextView
        android:id="@+id/txt_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_task"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:text="@string/task_title"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_font_size" />

    <ListView
        android:id="@+id/task_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_task_title"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@color/transparent" />

</RelativeLayout>